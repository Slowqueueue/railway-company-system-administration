@model RailwayCompanyIS.Models.Carrier.CarrierContactInputModel;
@{
    ViewData["Title"] = "Добавить новый контакт";
}


<div class="container">
    <div class="page-header clearfix datailHeading">
        <h2 class="text-muted">Добавить новый контакт</h2>
    </div>
</div>


<div class="row m-auto justify-content-center">
    <div class="col-7">
        @if (TempData["msg"] != null)
        {
            <div id="containerInfo">
                <p>
                    @TempData["msg"]
                </p>

            </div>
            <br />
        }
        <div class="border">
            <form asp-action="AddContact">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CarrierId" />
                <div class="container" style="padding:30px;background-color:#E9ECEF;">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Содержание контакта:</label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="ContactContent" class="form-control" />
                            </div>
                            <span asp-validation-for="ContactContent" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Тип контакта:</label>
                            </div>
                            <div class="col-sm-4">
                                <select asp-for="Type" class="form-group selcls">
                                    @foreach (var type in Model.ContactTypes)
                                    {
                                        <option>@type</option>
                                    }
                                </select>
                            </div>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3">
                                <input type="submit" value="Подтвердить" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-3">
                                <a asp-controller="Carrier" asp-action="Back" asp-route-id="@Model.CarrierId" class="btn btn-warning form-control">Назад</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


