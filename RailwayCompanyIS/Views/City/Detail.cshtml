@model RailwayCompanyIS.Models.CityDetailModel

@{
    ViewData["Title"] = @Model.Name;
}


<div class="container">
    <div class="page-header clearfix datailHeading">
        <h2 class="text-muted">Подробнее о городе</h2>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-3">
            <div>
                <img class="imageCell" style="height: 200px;" src=  "@Model.ImageUrl" />
            </div>
        </div>
        <div class="col-md-9">
            <div class="nameItem">Название:</div>
            <p id="itemName">@Model.Name</p>
            <div class="nameItem">Код региона: </div>
            <p id="itemZip">@Model.ZipCode</p>
            <div class="nameItem">Описание: </div>
            <p id="Description">@Model.Description</p>
        </div>
    </div>
</div>
<div class="row m-auto justify-content-center">
    <div class="col-auto">
        <h4>Машинисты города</h4>
        <table class="table table-bordered table-hover table-condensed">
            <thead class="thead-dark">
                <tr>
                    <th>Имя</th>
                    <th>Адрес</th>
                </tr>
            </thead>
            @if (Model.Carriers.ElementAt(0) != null) {
                @if (Model.Carriers.ElementAt(0).ToString() == "RailwayCompanyIS.Data.Models.Carrier")
                {
                    <tbody>
                        @foreach (var carrier in Model.Carriers)
                        {
                            <tr>
                                <td>@carrier.Name</td>
                                <td>@carrier.Address.StreetName, @carrier.Address.StreetNumber.</td>
                            </tr>
                        }
                    </tbody>
                }
            }
            else
            {
                <div>
                    <p>
                        Нет данных
                    </p>
                </div>
            }
        </table>
    </div>
</div>
